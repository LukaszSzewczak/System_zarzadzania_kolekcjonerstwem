<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="System_zarzadzania_kolekcjonerstwem.MainPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal" Margin="10">
            <Entry x:Name="NewCollectionEntry" Placeholder="New Collection Name" HorizontalOptions="FillAndExpand"/>
            <Button Text="Add Collection" Clicked="AddCollectionButton_Clicked" HorizontalOptions="End"/>
        </StackLayout>
        <ScrollView>
            <StackLayout x:Name="CollectionList" Margin="10"/>
        </ScrollView>
    </StackLayout>
</ContentPage>
